<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             x:Class="CRUD.view.MainPage">
    <ContentPage.ToolbarItems>

        <ToolbarItem x:Name="tbItemAdd" Clicked="tbItemAdd_Clicked" IconImageSource="iconAdd" Text="Add" Order="Primary" />

    </ContentPage.ToolbarItems>
    
    
    <StackLayout>
        <Label FontSize="Title" x:Name="lblTheme" Margin="0,15"
                HorizontalOptions="CenterAndExpand" Text="Welcome" />
        <Label x:Name="lblIsFirstTime" FontSize="Large"  Margin="0,10" Text="Muito obrigado por usar os nossos servicos"/>
        <Label FontSize="Large" Margin="0,20" Text="Aqui voce pode registrar os seus usuarios e poder realizar quaisquer operacoes CRUD a qualquer momento"/>
        <Label x:Name="lblCount" FontSize="Large"  />
        <Label x:Name="lblTobtnCrud" Margin="0,40" FontSize="Large" Text="Para uma consulta de todos nossos usuarios clique no botao abaixo"/>
        <Button x:Name="btnCRUDOpen" Text="Ver todos" VerticalOptions="EndAndExpand" Clicked="btnCRUDOpen_Clicked"/>
        <Button x:Name="btnAddFirstUser" Text="Clique aqui" Background="Green" Margin="0,13" Clicked="btnAddFirstUser_Clicked"/>
      
    </StackLayout>

</ContentPage>